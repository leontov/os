# Настройки сервиса инференса Kolibri
KOLIBRI_ENABLE_INFERENCE=1
KOLIBRI_INFERENCE_HOST=127.0.0.1
KOLIBRI_INFERENCE_PORT=8070
KOLIBRI_INFERENCE_LOG_LEVEL=info
KOLIBRI_INFERENCE_WORKERS=1
KOLIBRI_INFERENCE_RELOAD=0
KOLIBRI_INFERENCE_PROVIDER=echo
KOLIBRI_ECHO_PREFIX="Kolibri (debug)"

# OpenAI-интеграция (заполните при необходимости)
# KOLIBRI_OPENAI_API_KEY=
# KOLIBRI_OPENAI_MODEL=gpt-4o-mini
# KOLIBRI_OPENAI_BASE_URL=https://api.openai.com/v1
# KOLIBRI_OPENAI_TIMEOUT=60
# KOLIBRI_OPENAI_ORG=

# Фронтенд: URL HTTP-сервиса инференса
VITE_KOLIBRI_INFERENCE_URL=http://127.0.0.1:8070
VITE_KOLIBRI_INFERENCE_TIMEOUT=30000
