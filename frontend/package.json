{
  "name": "kolibri-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "node ./scripts/run-preview.mjs",
    "lint": "eslint \"src/**/*.{ts,tsx}\" vite.config.ts --max-warnings=0",
    "test": "vitest run --passWithNoTests --exclude \"tests/e2e/**\"",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "test:visual": "storybook build --config-dir ./.storybook --quiet && start-server-and-test \"http-server storybook-static --port 6006 --silent\" 6006 \"test-storybook --config-dir ./.storybook --index-json --url http://127.0.0.1:6006 --ci\"",
    "chromatic": "chromatic --exit-zero-on-changes",
    "test:e2e": "playwright test",
    "lighthouse": "lhci autorun"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "highlight.js": "^11.11.1",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.469.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.28.0",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.3.0",
    "tailwind-variants": "^0.2.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toggle-group": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@storybook/addon-a11y": "^8.2.9",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/react-vite": "^8.2.9",
    "@storybook/test": "^8.2.9",
    "@storybook/test-runner": "^0.18.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.19",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.49.1",
    "chromatic": "^11.11.4",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.4.0",
    "http-server": "^14.1.1",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.39",
    "start-server-and-test": "^2.0.6",
    "storybook": "^8.2.9",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.6.3",
    "vite": "^5.4.21",
    "vitest": "^1.6.0"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
